@model List<Todo>

<!-- Todo Stats -->
@if (Model.Count > 0)
{
    <div id="todo-stats" hx-swap-oob='true' class="d-flex justify-content-between align-items-center mt-3">
        <small class="text-muted">
            @Model.Count(todo => todo.Completed) of @Model.Count completed
        </small>
    </div>
}