@page
@model IndexModel
@{
    ViewData["Title"] = "Todo App";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h4 mb-0 text-center">Todo List</h1>
                </div>
                <div class="card-body">
                    <!-- Todo Form -->
                    <form hx-post="?handler=AddTodo" hx-target="#todo-list" hx-swap="outerHTML">
                        <div class="input-group mb-3">
                            <input 
                                asp-for="NewTodoText"
                                type="text" 
                                class="form-control" 
                                placeholder="Add a new task" 
                                aria-label="New task"
                                aria-describedby="button-add"
                            />
                            <button 
                                class="btn btn-primary" 
                                type="submit" 
                                id="button-add"
                            >
                                Add
                            </button>
                        </div>
                    </form>
                    
                    <!-- Todo List Component -->
                    <div id="todo-list">
                        @await Html.PartialAsync("_TodoList", Model.Todos)
                    </div>
                    
                    <!-- Todo Stats -->
                    @if (Model.TotalCount > 0)
                    {
                        <div id="todo-stats" class="d-flex justify-content-between align-items-center mt-3">
                            <small class="text-muted">
                                @Model.CompletedCount of @Model.TotalCount completed
                            </small>
                            @if (Model.CompletedCount > 0)
                            {
                                <button 
                                    class="btn btn-sm btn-outline-secondary"
                                    hx-post="?handler=ClearCompleted"
                                    hx-target="#todo-list"
                                    hx-swap="outerHTML"
                                    hx-confirm="Are you sure you want to clear all completed tasks?"
                                >
                                    Clear completed
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
