@page
@model IndexModel
@{
    ViewData["Title"] = "Todo App";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h4 mb-0 text-center">Todo List</h1>
                </div>
                <div class="card-body">
                    <div id="todo-component">
                        <!-- Todo Form -->
                        <form hx-post hx-page="index" hx-page-handler="AddTodo" hx-target="#todo-list" hx-swap="outerHTML"
                              hx-on::after-request="this.reset()">
                            <div class="input-group mb-3">
                                <input name="@nameof(Model.NewTodoText)" type="text" class="form-control" placeholder="Add a new task" />
                                <button class="btn btn-primary" type="submit" id="button-add">
                                    Add
                                </button>
                            </div>
                        </form>

                        <partial name="/Components/_TodoList.cshtml" model="Model.Todos" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
