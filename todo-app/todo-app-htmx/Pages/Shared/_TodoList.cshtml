@model List<todo_app_htmx.Models.Todo>

<div id="todo-list">
    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center my-3">
            No tasks yet. Add a new task to get started!
        </div>
    }
    else
    {
        <ul class="list-group">
            @foreach (var todo in Model)
            {
                <partial name="_TodoItem" model="todo" />
            }
        </ul>
    }
</div>
