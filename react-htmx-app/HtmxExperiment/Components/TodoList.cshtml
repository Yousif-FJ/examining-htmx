@using HtmxExperiment.Components
@using HtmxExperiment.Framework
@using HtmxExperiment.Models
@model List<Todo>

<div id="todo-list" hx-swap-oob='true'>
    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center my-3">
            No tasks yet. Add a new task to get started!
        </div>
    }
    else
    {
        <div class="list-group sortable" hx-post hx-page="index" hx-page-handler="UpdateTodoOrder" hx-trigger="end" hx-swap="none" 
            hx-include=".sort-input">
            <div class="htmx-indicator d-none">
                    Updating order...
            </div>
                @foreach (var todo in Model)
                {
                    @(await Component.InvokeTypedComponentAsync<TodoItem, Todo>(todo))
                }
        </div>
    }
</div>

