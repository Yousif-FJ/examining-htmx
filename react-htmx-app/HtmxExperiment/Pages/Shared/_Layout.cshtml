<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HTMX Experiment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">HTMX Experiment</a>
            <div class="navbar-nav ms-auto">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a class="nav-link me-3" asp-page="/Index">My Todos</a>
                    <span class="navbar-text me-3">Hello, @User.Identity.Name!</span>
                    <form class="d-inline" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm me-2" asp-page="/Account/Login">Login</a>
                    <a class="btn btn-primary btn-sm" asp-page="/Account/Register">Register</a>
                }
            </div>
        </div>
    </nav>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/sortable/Sortable.min.js"></script>
    <script src="~/lib/htmx.org/dist/htmx.min.js"></script>
    <script src="~/js/my.htmx.config.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
